<Form form="studentform" module="reactforms" title="Student Registration" action="save" successRedirect="/dashboard">
  <Block className="row">
    <Block className="col-md-6">
      <Field name="Name" type="text" label="Name" required="true" />
    </Block>
    <Block className="col-md-6">
      <Field name="Email" type="email" label="Email" required="true" />
    </Block>
  </Block>
  <Block className="row">
    <Block className="col-md-6">
      <Field name="DateOfBirth" type="date" label="Date of Birth" required="true" />
    </Block>
    <Block className="col-md-6">
      <Field name="Department" type="text" label="Department" required="true" />
    </Block>
  </Block>
  <Block className="row">
    <Block className="col-md-12">
      <Field name="Address" type="textarea" label="Address" />
    </Block>
  </Block>
  <Block className="row">
    <Block className="col-md-12">
      <Button type="submit" label="Register" className="btn btn-primary" />
    </Block>
  </Block>
</Form>
